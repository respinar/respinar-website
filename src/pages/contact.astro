---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout
  title="Contact | Respinar"
  description="Contact Us"
>
  <section class="max-w-6xl mx-auto px-4 py-20 grid md:grid-cols-2 gap-12">
    
    <div>
      <h2 class="text-4xl font-bold mb-4">Get in Touch</h2>
      <p class="text-gray-600 mb-6">
        Have a question or project in mind? Weâ€™d love to hear from you.
      </p>

      <ul class="space-y-4">
        <li class="flex gap-3">
          <span class="font-semibold">Email:</span>
          info@respinar.com
        </li>
        <li class="flex gap-3">
          <span class="font-semibold">Mobile:</span>
          +98 914 255 3221
        </li>        
      </ul>
    </div>

    <form class="bg-white p-8 rounded-2xl shadow space-y-6">
      <input
        type="text"
        placeholder="Name"
        class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500"
      />

      <input
        type="email"
        placeholder="Email"
        class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500"
      />

      <textarea
        rows="5"
        placeholder="Message"
        class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500"
      ></textarea>

      <button
        type="submit"
        class="w-full bg-blue-600 text-white py-3 rounded-lg hover:bg-blue-700"
      >
        Send
      </button>
    </form>

  </section>
  
</BaseLayout>

